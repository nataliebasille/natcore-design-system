{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "ES2020",
    "module": "Preserve",
    "moduleResolution": "Bundler",

    "rootDir": "src",
    "outDir": "dist",

    // âœ… enable the automatic React JSX runtime + its types
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
