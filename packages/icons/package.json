{
  "name": "@natcore/icons",
  "version": "0.0.0",
  "description": "Natcore icon components",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",

  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs",
      "default": "./dist/*.mjs"
    }
  },

  "files": ["dist"],

  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint ."
  },

  "peerDependencies": {
    "react": ">=17 || ^18 || ^19"
  },
  
  "devDependencies": {
    "@types/react": "^18.3.3",
    "react": "^18.3.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
