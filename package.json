{
  "name": "natcore-design-system",
  "private": true,
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "scripts": {
    "changeset": "changeset",
    "build": "pnpm --filter @nataliebasille/natcore-design-system build && pnpm --filter showcase build",
    "dev": "concurrently \"pnpm --filter @nataliebasille/natcore-design-system dev\" \"pnpm --filter showcase dev\"",
    "dev:v2": "concurrently \"pnpm --filter showcase-v2 dev\"",
    "clean": "pnpm -r clean",
    "release": "pnpm -r --filter \"./packages/*\" build && changeset publish"
  },
  "dependencies": {
    "classnames": "^2.5.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/react": "19.x",
    "@types/react-dom": "19.x",
    "concurrently": "^9.2.1",
    "eslint": "^9.12.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.1.16",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.x",
      "@types/react-dom": "19.x"
    },
    "patchedDependencies": {
      "lightningcss@1.30.2": "patches/lightningcss@1.30.2.patch"
    }
  }
}
